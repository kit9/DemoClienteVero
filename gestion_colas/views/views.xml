        <!-- Thee -->
        <record id="opt_gestion_colas_tree_view" model="ir.ui.view">
            <field name="name">opt.gestion_colas.tree.view</field>
            <field name="model">opt.gestion_colas</field>
            <field name="arch" type="xml">
                <tree string="Tree Tipo de Documentos">
                    <!--<field name="name"/>-->
                    <field name="name"/>
                    <field name="start_datetime"/>
                    <field name="stop_datetime"/>
                    <field name="duration"/>
                    <field name="day_all"/>
                    <field name="employee_id"/>
                </tree>
            </field>
        </record>

        <!-- Form Tipo de Documentos -->
        <record id="opt_gestion_colas_form_view" model="ir.ui.view">
            <field name="name">opt.gestion_colas.form.view</field>
            <field name="model">opt.gestion_colas</field>
            <field name="arch" type="xml">
                <form string="Form Tipo de Documento">
                    <sheet>
                        <group>
                            <!--<field name="name"/>-->
                            <field name="name"/>
                            <field name="start_datetime"/>
                            <field name="stop_datetime"/>
                            <field name="duration"/>
                            <field name="day_all"/>
                            <field name="employee_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="opt_gestion_colas_form_calendar_view" model="ir.ui.view">
            <field name="name">opt.gestion_colas.form.calendar.view</field>
            <field name="model">opt.gestion_colas</field>
            <field name="arch" type="xml">
                <calendar string="Tareas" date_start="start_datetime"
                          date_delay="duration" all_day="day_all" mode="week">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <record id="opt_gestion_colas_form_gantt_view" model="ir.ui.view">
            <field name="name">opt.gestion_colas.form.gantt.view</field>
            <field name="model">opt.gestion_colas</field>
            <field name="arch" type="xml">
                <gantt string="Tareas" date_start="start_datetime" date_delay="duration" default_group_by="employee_id"
                       type="gantt">
                </gantt>
            </field>
        </record>

        <!-- Action Document Type -->
        <record id="action_opt_gestion_colas" model="ir.actions.act_window">
            <field name="name">Tipo de Documento Sunat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">opt.gestion_colas</field>
            <field name="view_mode">tree,calendar,gantt,form</field>
        </record>

        <menuitem id="gestion_colas_menu_root"
                  name="Gestion de Colas"
                  web_icon="gestion_colas,static/description/icon.png"/>

        <menuitem id="gestion_colas_menu_root_cat"
                  name="Gestion de Colas"
                  parent="gestion_colas_menu_root"
                  sequence="1"/>

        <menuitem id="gestion_colas_item"
                  name="Colas"
                  parent="gestion_colas_menu_root_cat"
                  action="action_opt_gestion_colas"
                  sequence="1"/>

    </data>
