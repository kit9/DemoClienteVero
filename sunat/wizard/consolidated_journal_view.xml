<odoo>
    <data>

        <record id="consolidated_journal_view" model="ir.ui.view">
            <field name="name">sunat.consolidated_journal.form</field>
            <field name="model">sunat.consolidated_journal</field>
            <field name="arch" type="xml">
                <form string="Generar Archivo">
                    <field name="state" invisible="1"/>
                    <field name="txt_filename" invisible="1"/>
                    <group states="choose" string="Generar Archivo">
                        <field name="date_month" required="True"/>
                        <field name="date_year" required="True"/>
                        <footer states="choose">
                            <button name="generate_file" string="Generar" type="object" class="oe_highlight"/>
                            Or
                            <button string="Cancel" special="cancel" class="oe_link"/>
                        </footer>
                    </group>
                    <div states="get">
                        <h2>Archivo Generado</h2>
                        <p>Este es tu archivo:
                            <field name="txt_binary" readonly="1" filename="txt_filename"/>
                        </p>
                    </div>
                    <footer states="get">
                        <button string="Close" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="consolidated_journal_sunat" model="ir.actions.act_window">
            <field name="name">consolidated_journal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sunat.consolidated_journal</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>