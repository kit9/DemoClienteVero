<odoo>
    <data noupdate="1">

        <!-- Account Tax Group -->
        <record id="sunat_tax_group" model="account.tax.group">
            <field name="name">Taxes</field>
        </record>

        <!-- Taxs -->
        <record id="sunat_ITAX_ISC" model="account.tax">
            <field name="name">ISC</field>
            <field name="description">ISC</field>
            <field name="amount">10</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="sunat_tax_group"/>
            <field name="tax_rate">isc</field>
        </record>

        <record id="sunat_ITAX_OTROS" model="account.tax">
            <field name="name">Otros</field>
            <field name="description">Otros</field>
            <field name="amount">5</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="sunat_tax_group"/>
            <field name="tax_rate">otros</field>
        </record>

        <!-- Taxs Inherit -->
        <record id="l10n_pe.ITAX_18" model="account.tax">
            <field name="name">IGV 18% Venta</field>
            <field name="description">IGV 18% Venta</field>
            <field name="amount">18</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="account_id" ref="l10n_pe.401110"/>
            <field name="refund_account_id" ref="l10n_pe.401110"/>
            <field name="tag_ids" eval="[(6,0,[ref('l10n_pe.tax_tag_sale_18')])]"/>
            <field name="tax_group_id" ref="l10n_pe.tax_group_18"/>
            <field name="tax_rate">igv</field>
        </record>

        <record id="l10n_pe.OTAX_18" model="account.tax">
            <field name="name">IGV 18% Compra</field>
            <field name="description">IGV 18% Compra</field>
            <field name="amount">18</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">purchase</field>
            <field name="account_id" ref="l10n_pe.401110"/>
            <field name="refund_account_id" ref="l10n_pe.401110"/>
            <field name="tag_ids" eval="[(6,0,[ref('l10n_pe.tax_tag_purchase_18')])]"/>
            <field name="tax_group_id" ref="l10n_pe.tax_group_18"/>
            <field name="tax_rate">igv</field>
        </record>
    </data>
</odoo>