<odoo>
    <data>

        <record id="drowback_drowback_form" model="ir.ui.view">
            <field name="name">drowback.drowback.form</field>
            <field name="model">drowback.drowback</field>
            <field name="arch" type="xml">
                <form string="Generar Archivo">
                    <field name="state" invisible="1"/>
                    <field name="txt_filename" invisible="1"/>
                    <group states="choose" string="Generar Drowback">
                        <footer states="choose">
                            <button name="generate_file" string="Generar" type="object" class="oe_highlight"/>
                            Or
                            <button string="Cancel" special="cancel" class="oe_link"/>
                        </footer>
                    </group>
                    <div states="get">
                        <h2>Archivo Generado</h2>
                        <p>Este es tu archivo:
                            <field name="txt_binary" readonly="1" filename="txt_filename"/>
                        </p>
                    </div>
                    <footer states="get">
                        <button string="Close" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="drowback_drowback_action" model="ir.actions.act_window">
            <field name="name">drowback.drowback.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">drowback.drowback</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <act_window id="drowback_drowback_action_report"
                    multi="False"
                    key2="client_action_multi"
                    name="Reporte Drowback"
                    res_model="drowback.drowback"
                    src_model="stock.picking"
                    view_mode="form"
                    target="new"
                    view_type="form"/>

        <!--        <act_window id="drowback_drowback_action_report_unit"-->
        <!--                    multi="False"-->
        <!--                    key2="client_action_multi"-->
        <!--                    name="Reporte Drowback"-->
        <!--                    res_model="drowback.drowback"-->
        <!--                    src_model="stock.picking"-->
        <!--                    view_mode="form"-->
        <!--                    target="new"-->
        <!--                    view_type="form"/>-->

    </data>
</odoo>