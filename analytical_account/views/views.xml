<odoo>

    <record id="analytic_analytic_account_form_inherit" model="ir.ui.view">
        <field name="name">analytic.analytic.account.form.inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="destination"/>
                <field name="target_debit_id" required="1" attrs="{'invisible':[('destination','=',False)]}"/>
                <field name="target_credit_id" required="1" attrs="{'invisible':[('destination','=',False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='line_ids']/form[1]/group[1]/field[@name='analytic_account_id']" position="after">
                <field name="move_analytic_id"/>
            </xpath>
        </field>
    </record>

    <record id="move_target_on_write" model="base.automation">
        <field name="name">Asiento Destino</field>
        <field name="model_id" ref="model_account_move"/>
        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="state">code</field>
        <field name="code">
            record.account_analytic_destino()
        </field>
    </record>

</odoo>