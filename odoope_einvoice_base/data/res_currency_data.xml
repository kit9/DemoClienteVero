<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Currencies -->
        <record id="base.USD" model="res.currency">
            <field name="name">USD</field>
            <field name="symbol">USD $</field>
            <field name="rounding">0.01</field>
            <field name="position">before</field>
            <field name="currency_unit_label">Dólares americanos</field>
            <field name="currency_subunit_label">Centavos</field>
        </record>
        
        <record id="base.EUR" model="res.currency">
            <field name="name">EUR</field>
            <field name="symbol">€</field>
            <field name="rounding">0.01</field>
            <field name="position">before</field>
            <field name="currency_unit_label">Euros</field>
            <field name="currency_subunit_label">Centavos</field>
        </record>
        
        <record id="base.PEN" model="res.currency">
            <field name="name">PEN</field>
            <field name="symbol">S/.</field>
            <field name="position">before</field>
            <field name="currency_unit_label">Soles</field>
            <field name="currency_subunit_label">Céntimos</field>
        </record>

    </data>
</odoo>
